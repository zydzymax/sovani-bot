# Пример файла конфигурации для SoVAni Bot
# Скопируйте этот файл в .env и заполните своими значениями

# OpenAI API ключ (обязательно!)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4

# ID чата Telegram для уведомлений (обязательно!)
MANAGER_CHAT_ID=your_telegram_chat_id_here

# Ozon API (если используется)
OZON_CLIENT_ID=your_ozon_client_id
OZON_API_KEY=your_ozon_api_key

# Настройки бизнеса
COST_PRICE=600

# Настройки времени проверки отзывов
REVIEW_CHECK_HOUR=6
REVIEW_CHECK_MINUTE=0

# Настройки минимальных остатков
WB_MIN_STOCK_DAYS=14
OZON_MIN_STOCK_DAYS=56

# Пути к файлам
REPORTS_DIR=reports
LOG_FILE=sovani_bot.log
DB_FILE=sovani_bot.db

# Уровень логирования (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Временная зона
TIMEZONE=Europe/Moscow
